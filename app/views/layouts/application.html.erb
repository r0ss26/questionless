<!DOCTYPE html>
<html>

<head>
  <title>Questionless</title>
  <%= favicon_link_tag asset_path('questionless.png') %>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
  <% unless controller.controller_name == 'pages' && controller.action_name == 'landing' %>
  <%= render  "shared/navbar" %>
  <%= render  "shared/error" %>
  <% end %>

  <br />
  <div class="columns" id="yield" style="rgba(255, 255, 255, 0.6)">
    <div class="column is-1"></div>
    <div class="column">
      <%= yield %>
    </div>
    <div class="column is-1"></div>
  </div>


<%= render "shared/footer" %>

</body>

</html>