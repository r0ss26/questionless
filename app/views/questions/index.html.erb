<div class="columns">
  <div class="column is-2">
    <h3><b>Questions</b></h3>
    <hr class="dropdown-divider">
    <h4>Questions for You</h4>
    <h4>Answer Requests</h4>
    <h4>Answer Later</h4>
  </div>
  <div class="column is-8">
    <div class="card">

    </div>
    <div class="card">
      <div class="card-header">
        <div class="card-header-icon">
          <button class="button" style="background: #b92b27;">
            <span class="icon"><i class="fas fa-star" color="white"></i></span>
          </button>
        </div>
        <div class="card-header-title">Questions For You</div>
      </div>
      <div class="card-content">
        <table class="table is-bordered is-fullwidth">
          <% @questions.each do |question| %>

          <tbody>
            <tr>
              <td>
                <%= link_to question_path(question) do %>
                <h1 class="title is-5"><%= question.title %></h1>
                <% end %>
                <br />
                <p><%= question.answers.count %> Answer(s)</p>
                <br />
                <div>
                  <button class=" button is-light" onclick="answer(<%=question.id%>)">
                    <span>Answer</span>
                  </button>

                  <button class="button is-light">
                    <span>Pass</span>
                  </button>

                  <button class="button is-light">
                    <span>Follow</span>
                  </button>

                  <button class="button is-light">
                    <span>More</span>
                  </button>

                  <button class="button">
                    <span class="icon"><i class="fas fa-ellipsis-h"></i></span>
                  </button>
                </div>
                <div class="tags">
                  <div class="buttons">
                  <% question.tag_list.each do |tag| %>
                  <div class="button">
                    <%= link_to tag, tagged_questions_path(tag: tag) %>
                  </div>
                  <% end %></p>
                  </div>
                </div>
                <div class="answer_form" id="answer_form_<%=question.id%>" style="display:none;">
                  <%= render "shared/new_answer", question: question %>
                </div>
              </td>
            </tr>
          </tbody>

          <% end %>
        </table>
      </div>
      <div class="card-footer">
        <div class="card-footer-item" style="text-align:center;">
          <a href="#">More</a>
        </div>
      </div>
    </div>
  </div>
  <div class="column">
  </div>
</div>